# === Runtime mode ===
LOG_LEVEL=INFO
DEVICE=cpu                 # cpu | cuda
ROUTER_MODE=inproc         # inproc | per_user (only needed if you add the router later)

# === Base model (prefer local path over huggingface id) ===
BASE_MODEL_PATH=/models/t5-base   # mounted volume path (recommended)
BASE_MODEL_ID=t5-base             # fallback if PATH is empty
TRANSFORMERS_OFFLINE=1            # use local cache only (set 0 if you want online download)
TRANSFORMERS_CACHE=/models        # cache co-located with mounted models (optional)

# === Generation controls ===
GEN_TOKENS_SHORT=56
GEN_TOKENS_LONG=128
MAX_HANDLES=8
IDLE_SECS=1200

# === Object storage ===
OBJECT_STORE_IMPL=minio           # local | s3 | minio
OBJECT_STORE_URL=http://minio:9000
ADAPTER_BUCKET=adapters           # used in single_bucket layout
LORA_LAYOUT=bucket_per_user       # single_bucket | bucket_per_user
LORA_OBJECT_KEY=lora.safetensors
MINIO_PATH_STYLE=true
S3_VERIFY_SSL=false
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin

# === Local (filesystem) buckets for dev only ===
LOCAL_BUCKETS_DIR=./buckets

# === Security (add your own) ===
# API_KEY=...
